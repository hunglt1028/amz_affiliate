<section class="full-height volunteer-section section-padding" id="section_4">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-8 col-md-10 col-12 text-center">
                <form class="custom-form volunteer-form mb-5 mb-lg-0" action="/login" method="post" role="form">
                    <h3 class="mb-4">Amazon Affiliate</h3>
                    {{#if data.error}}
                    <div class="alert alert-danger" role="alert">
                        {{data.error}}
                    </div>
                    {{/if}}
                    <div class="row">
                        <div class="col-12">
                            <input type="email" name="email" id="volunteer-email" pattern="[^ @]*@[^ @]*"
                                class="form-control" value="{{data.data.email}}" placeholder="Địa chỉ email" required>
                        </div>

                        <div class="col-12">
                            <input type="password" name="password" id="volunteer-subject" class="form-control" required
                                placeholder="Mật khẩu">
                        </div>
                        <button type="submit" class="form-control">Đăng nhập</button>
                </form>
            </div>
        </div>
    </div>
</section>